<div class="my-applications">
    <div class="application-offers" id="application-offers">
        <div class="section-title">My Offers</div>
        {{#if appsAny}}
        <div class="applications-box" id="applications">
            {{#each apps}}
                <div class="application">
                    <img src="/{{photo}}" alt="">
                    <div class="application-description">
                        <div class="company">{{companyName}}</div>
                        <div class="application-info">Job Type:{{typeOfWork}}</div>
                        <div class="application-info">Proffesion Field:{{field}} </div>
                        <div class="application-info">Location:{{region}} </div>
                        {{#author}}
                        <div class="application-info">Author:{{email}} </div> 
                        {{/author}} 
                        <!-- less             -->
                        <div class="application-info less" id="description"><div>Description:{{description}}</div>  
                        <ul class="applicants">
                            {{#each applicants}}
                            <li><a href="/profile/{{userId}}">{{name}}</a> <a href="/accept/{{userId}}/{{_id}}">Accept</a> <a href="/reject/{{userId}}/{{_id}}">Reject</a><span class="status">{{status}}</span> </li>
                            {{/each}}
                        </ul>
                        {{!-- <div class="application-info">Created:{{createdAt}} </div>   --}}
                        </div>
                        <div class="show-more"><a href= '/delete_app/{{_id}}' class="delete">Delete Application</a> <span class="more">Show More</span></div>
                        
                    </div>
                </div>
            {{/each}}
        </div>
        <div class="counter">
            <div>showing <span class="current-application from">1</span> to <span class="current-application to">5</span> out of <span class="total-application">{{appsAny}}</span></div>
            <div><span class="arrow left">&lt;</span><span class="page-number">1</span><span class="arrow right">&gt;</span></div>
        </div>
        {{else}}
        <div>You have not made any application!</div>
        {{/if}}
            
    </div>
</div>

    <div class="add_applications" id="add_applications">
        <div class="section-title">Create Application</div>
        
        <form action="/create_application" method="post" enctype="multipart/form-data" class="contact-form">
          <div class="section"><span class="id">Company Name:</span><div class="in"><input type="text" name='companyName' placeholder='Company Name' class="email" required><span class="asterisc" >*</span></div></div>
          <div class="filter"><label for="Proffesion">Desired Field:</label>
            <select name="proffesion" id="Proffesion">
                <option value="other">other</option>
                <option value="algorithm-engineer">Algorithm Engineer</option>
                <option value="front-end">Front-end</option>
                <option value="back-end">Back-end</option>
                <option value="data-science">Data-Science</option>
            </select>
        </div>
        <div class="filter"><label for="region">Desired Location:</label>
            <select name="region" id="region">
                <option value="other">other</option>
                <option value="Athens">Athens</option>
                <option value="Patras">Patras</option>
                <option value="Thessaloniki">Thessaloniki</option>
                <option value="Larissa">Larissa</option>
            </select>
        </div>
            
        <div class="filter"><label for="Job-type">Job-type:</label>
            <select name="jobType" id="Job-type">
                <option value="other">other</option>
                <option value="Part-time">Part time</option>
                <option value="Full-time">Full time</option>
                <option value="Internship">Internship</option>
            </select>
        </div>
          <div class="message-section"><div>Job Description</div><textarea name='jobDescription'type="text" placeholder='type your text...' class="message" required></textarea></div>
          <div class="application-photo"> 
            <label for="appPhoto"> Insert application picture:</label>
            <input type="file" name="appPhoto" id="appPhoto" accept="image/png,image/jpeg">    
         </div>
          <button type="submit" class="exit submit">Enter</button>
        </form>
      </div>
    </div>